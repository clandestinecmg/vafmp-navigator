{
  "name": "vafmp-navigator",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "easlogs": "scripts/eas-last-logs.sh android",
    "bump": "scripts/bump-build.sh",
    "snap": "scripts/save-working-snapshot.sh",
    "restore": "scripts/restore-from-snapshot.sh",
    "eas:android:dev": "scripts/eas-build-with-snapshot.sh android development",
    "eas:android:prod": "scripts/eas-build-with-snapshot.sh android production",
    "eas:ios:dev": "scripts/eas-build-with-snapshot.sh ios development",
    "eas:ios:prod": "scripts/eas-build-with-snapshot.sh ios production",
    "release:android": "scripts/bump-build.sh && scripts/eas-build-with-snapshot.sh android production",
    "release:ios": "scripts/bump-build.sh && scripts/eas-build-with-snapshot.sh ios production",
    "build:android:dev": "scripts/eas-build-with-snapshot.sh android development",
    "build:ios:dev": "scripts/eas-build-with-snapshot.sh ios development",
    "postrelease": "git tag -a release-$(date +%Y%m%d_%H%M%S) -m 'Tagged release' && git push --tags",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run lint && tsc --noEmit",
    "prepare": "husky",
    "check:hooks": "scripts/check-hooks.sh",
    "postinstall": "npm run check:hooks",
    "fix:prettier": "scripts/fix-prettier.sh",
    "fix:lint": "scripts/fix-lint.sh",
    "fix:all": "scripts/fix-all.sh",
    "ci:status": "gh run list --limit 5",
    "ci:rerun": "gh run rerun $(gh run list --limit 1 --json databaseId --jq '.[0].databaseId')",
    "pr:create": "gh pr create --fill --base main",
    "pr:list": "gh pr list --assignee @me --state open",
    "deps:update": "gh workflow run Dependabot",
    "sec:scan": "gh workflow run Security",
    "gh:alias": "gh alias set ci 'run list --limit 5'",
    "gh:checkup": "scripts/gh-helpers.sh",
    "gh:check": "scripts/gh-helpers.sh",
    "gh:check:security": "scripts/gh-helpers.sh Security",
    "gh:check:ci": "scripts/gh-helpers.sh CI",
    "gh:check:tests": "scripts/gh-helpers.sh Tests"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-picker/picker": "2.11.1",
    "@tanstack/react-query": "^5.87.1",
    "expo": "~53.0.22",
    "expo-application": "~6.1.5",
    "expo-asset": "~11.1.7",
    "expo-constants": "~17.1.7",
    "expo-dev-client": "~5.2.4",
    "expo-device": "~8.0.8",
    "expo-font": "~13.3.2",
    "expo-linking": "~7.1.7",
    "expo-mail-composer": "~14.1.6",
    "expo-router": "~5.1.6",
    "expo-secure-store": "~14.2.4",
    "expo-status-bar": "~2.2.3",
    "firebase": "^11.10.0",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-image-pan-zoom": "^2.1.12",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@eslint/js": "^9.35.0",
    "@types/react": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-native": "^5.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "tslib": "^2.8.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "private": true
}
