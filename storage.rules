rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // ðŸ”’ Default: block everything
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // ðŸ‘¤ User-owned files under /users/{uid}/...
    match /users/{uid}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}